with Ada.Text_IO;
use Ada.Text_IO;

package body polinomial is

   function set_Polynomial(a: in Integer; b: in Integer) return coefficient is
      x : coefficient;
      begin
      x(b) := a;
    --deg : degree();
      return x;
   end set_Polynomial;


   function degree() return Integer is
      d:= 0;
      for I in 1..length(coefficient) loop
         if coefficient(I)!=0 then
            d := I
      end loop;
      return d;
   end set_Polynomial;



 end polinomial;
